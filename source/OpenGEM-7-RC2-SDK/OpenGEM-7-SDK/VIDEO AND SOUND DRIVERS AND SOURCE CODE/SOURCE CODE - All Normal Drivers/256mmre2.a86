		 endif
		 inc	cs:VESA_SLICE
		 call	setslice
		endif
mdraw_nslice:	pop	cx
		loop	mdraw_lp
nodrawing:
		if	VESA_MULTISEG
		 pop	cs:VESA_SLICE
		 call	setslice
		endif
