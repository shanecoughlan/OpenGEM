mdraw_trans:	ror	dx,1
		inc	si

		if 	VESA_SPLITLINE
		 if	WINDOW_SIZE ne 0
		  cmp	si, WINDOW_SIZE
		 endif
		 jnz	mdraw_t1
		 inc	cs:VESA_SLICE
		 call	setslice
mdraw_t1:	
		endif

		loop	mdraw_xrow
		if 	VESA_SPLITLINE
		 pop	cs:VESA_SLICE
		 call	setslice
		endif
		pop	si
		inc	di
		inc	di
		add	si,bytes_line
		if	VESA_MULTISEG
		 if	WINDOW_SIZE ne 0
		  cmp	si, WINDOW_SIZE
		  jc	mdraw_nslice
