;escape func 3
; Exit Graphics Mode
;****************************************	
DINIT_G:
escfn3:
	cmp	dispmode,0
	jz	escfn3_ok
	ret
escfn3_ok:
	mov	bl,2
	call	mouse_function
	mov	dispmode,1
	call	clearmem

	mov	dx, IO_ADDR_REG		;Set DEB to transparant mode
	mov	al, 1
	out	dx, al
	mov	dx, MODE_CTL_REG
	mov	al, 00h
	out	dx, al

	mov	ah,0
	mov	al,2	;80*25 mode
	int	screen
	mov	attribute,rev_vid_off
if ibmvdi
	call	escfn8			;home
	call	escfn9			;clear to end of screen
else
	mov	ah,2				;set cursor position 0,0
	xor	dx, dx
	mov	bh, dh
	int	10h
	mov	ah, 9
	xor	bh, bh
	mov	cx, 2000
	mov	al, 20h
	mov	bl, 7
	int	10h
endif
	ret
