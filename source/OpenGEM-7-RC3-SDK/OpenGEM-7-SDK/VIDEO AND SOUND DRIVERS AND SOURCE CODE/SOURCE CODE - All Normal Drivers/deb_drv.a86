;****************************************	
;escape func 2
; Enter Graphics Mode 
;****************************************	
INIT_G:
	pushf
	mov	ax,cs
	mov	usermot+2,ax		;init the user call vectors segs
	mov	userbut+2,ax
	mov	usercur+2,ax
	mov	ax,offset umotvec
	mov	usermot,ax
	mov	ax,offset ubutvec
	mov	userbut,ax
	mov	ax,offset mov_cur
	mov	usercur,ax
	popf
escfn2: 
	cmp	dispmode, 0
	jnz	escfn2_ok
	ret
escfn2_ok: 
	mov	dispmode,0
	mov	ah,0

if 1
	mov al, 72
	int screen

	mov si, offset gem_lut_table
	call set_lut

	call clearmem
else
	mov	al,40h	
	int	screen

	mov	dx, IO_ADDR_REG		;Set DEB to transparant mode
	mov	al, 1
	out	dx, al
	mov	dx, MODE_CTL_REG
	mov	al, 00h
	out	dx, al

	call	clearmem

	call	wait_for_retrace
	mov	dx, IO_ADDR_REG		;Set to program both 6845s
	xor	ax, ax
	out	dx, ax

	mov	si, offset crt_init_table_g
	mov	di, 03D4h
	mov	cx, 16
	mov	dx, di
init_6845:
	mov	ax, 16
	sub	ax, cx
	out	dx, ax
	inc	dx
	lodsb
	out	dx,al
	dec	dx
	loop	init_6845

	mov	ax, 003Fh
	mov	dx, 03D9h
	out	dx, ax

	mov	dx, 03DAh
	xor	ax, ax
	in	al, dx
	and	al, 10h
	shl	al, 1
	shl	al, 1
	inc	al
	or	al, 20h
	mov	dx, 03DEh
	out	dx, al
	mov	dx, 03d8h
	mov	ax, 01Eh
	out	dx, ax

	mov	si, offset gem_lut_table
	call	set_lut
endif

	mov	bl,1
	call	mouse_function		;initialize the mouse
	ret

;*****************************************************************
;set_lut
;	initializes the lookup table to the default values
;*****************************************************************

set_lut:
	push	si		;save address of table to set
	mov	di, IO_ADDR_REG
	mov	si, MODE_CTL_REG
	mov	bh, 2
	mov	bl, 1

	call	wait_for_retrace

	mov	dx, di		;First we load the lut.  Set the
	mov	al, bl		;IO address register so it points
	out	dx, al		;to the lut address
	mov	dx, si
	out	dx, al

	mov	dx, di		;Set the LUT address to entry zero
	mov	al, bh		;since we want to load the whole
	out	dx, al		;thing
	mov	dx, si
	xor	al, al
	out	dx, al

	mov	dx, di		;Now set the IO address register
	mov	al, bl		;so it points to the control register
	out	dx, al		;select autoincrement mode
	mov	al, 6		;on the LUT address register
	mov	dx, si
	out	dx, al

	mov	dx, di		;Now set the IO address register
	mov	al, bh		;so it points to the LUT itself
	out	dx, al

	call	wait_for_retrace

	mov	dx, si
	pop	si
	mov	cx, 256

lut_load_loop:
	lodsb			;Get and set entry
	out	dx, al
	loop	lut_load_loop

	mov	dx, di	;Set up our desired operating mode
	mov	al, bl
	out	dx, al
	mov	dx, MODE_CTL_REG
	mov	al, 0BBh
	out	dx, al
	ret

;*****************************************************************
;wait_for_retrace
;	waits for the start of the next vertical blank interval
;*****************************************************************
wait_for_retrace:
	mov	dx, 03DAh
wait_for_end:
	in	al, dx		;Wait out end of current
	test	al, 8		;VBLANK
	jnz	wait_for_end

wait_for_start:
	in	al, dx		;Wait for start of next
	test	al, 8		;VBLANK
	jz	wait_for_start
	ret

